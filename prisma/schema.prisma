// prisma/schema.prisma

model Purchaser {
  id           Int         @id @default(autoincrement())
  name         String
  email        String      @unique
  projectName  String
  milestones   Milestone[]
}

model Milestone {
  id           Int         @id @default(autoincrement())
  budget       Int
  description  String
  no_revision  Int
  purchaser    Purchaser   @relation(fields: [purchaserId], references: [id])
  purchaserId  Int
}
